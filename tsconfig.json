{
  "compilerOptions": {
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "rootDirs": [
      "."
    ],
    "baseUrl": ".",
    "paths": {
      "@one-dead/*": [
        "*"
      ]
    },
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitOverride": false
  },
  "include": [
    "src",
    "game"
  ]
}
